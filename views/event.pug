extends layout

block content
  .container
    .twelve.columns
      img.staticmap(src=helpers.staticMap(event.location.coordinates))
    h2= event.title
    .row.event-row
      .nine.columns
        img.eventimg
      .three.columns.attendevent
        aside.eventdetails
          h3= event.title
          p When: #{date}
          form(action='/event/'+event._id method='POST')
            button.button-attending I'm attending!
          button.button-eventdescription Read description ðŸ‘‡
          p.p-eventdescription= event.description
