extends layout

include mixins/eventCard

block content
  .container.dashboard
    .row
      .twelve.columns
          h2 Attended events
          if attendedEvents
            each event in attendedEvents
              +eventCard(event)
          form(action="/search")
            button.button-primary.button-login Browse events
    .row
      .eleven.columns
          h2 Hosted events
          if hostedEvents
            each event in hostedEvents
              +eventCard(event)
          form(action="/newevent")
            button.button-primary.button-signup Create a new event
