doctype html
html
  head
    title= title
    link(rel='stylesheet', href='/stylesheets/skeleton/normalize.css')
    link(rel='stylesheet', href='/stylesheets/skeleton/skeleton.css')
    link(rel='stylesheet', href='/stylesheets/style.css')
    link(rel='stylesheet', href='/stylesheets/flashes.css')
  body
    header
      nav
        li
          a(href="/") Main
        li
          a(href="/signup") Signup
        if !locals.isUserLoggedIn
          li
            a(href="/login") Login
        li
          a(href="/search") All events
    if locals.flashes
      .flash-messages
        - const categories = Object.keys(locals.flashes)
        each category in categories
          each message in flashes[category]
            .flash(class=`flash--${category}`)
              p.flash__text!= message
              button.flash__remove(onClick="this.parentElement.remove()") &times;
    block content
    footer.footer
      .container
        .row
          .four.columns.footer-col
            p Some content
          .four.columns.footer-col
            p More content
          .four.columns.footer-col
            p Even more
